<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DhiwiseFigmaApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DhiwiseFigmaApp" parent="Base.Theme.DhiwiseFigmaApp" />


    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:paddingStart">@dimen/_17sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_17sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <!--        <item name="fontFamily">@font/avenir_regular</item>-->
    </style>

    <style name="RoundAlertDialogShapeTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="textAllCaps">false</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorPrimary">@color/secondary_100</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>
    </style>


    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="android:gravity">center</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
        <item name="colorSurface">@color/white</item>
    </style>

</resources>